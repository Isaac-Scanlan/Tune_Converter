            </Grid.ColumnDefinitions>

            <Label Content="Standard ABC Format" Grid.Column="2" Grid.Row="2" Grid.ColumnSpan="6" Grid.RowSpan="2"/>
            <customControls:TuneTextBox x:Name="tuneTextBlock" Grid.Column="2" Grid.ColumnSpan="7" Grid.RowSpan="28" Grid.Row="4" />
            <Button x:Name="convertButton" Content="Convert" Grid.Column="2" Grid.ColumnSpan="2" Grid.RowSpan="2" Grid.Row="33" Margin="0"/>

            <Label Content="New ABC Format" Grid.Column="10" Grid.Row="2" Grid.ColumnSpan="6" Grid.RowSpan="2"/>
            <customControls:TuneTextBox x:Name="tuneTextBlock2" Grid.Column="10" Grid.ColumnSpan="7" Grid.RowSpan="28" Grid.Row="4" />
            <Button x:Name="convertButton2" Content="Convert" Grid.Column="10" Grid.ColumnSpan="2" Grid.RowSpan="2" Grid.Row="33" Margin="0"/>


            <Image x:Name="tuneImage" Source="/default_image.png" Grid.Column="18" Grid.ColumnSpan="12"  Grid.RowSpan="30" Grid.Row="2"/>

            <Button x:Name="previousPageButton" Content="←" Grid.Column="21" Grid.ColumnSpan="1" Grid.RowSpan="2" Grid.Row="33" Margin="0"/>
            <Label  x:Name="pageCountLabel" Grid.Column="22"  Grid.ColumnSpan="4" Grid.RowSpan="2" Grid.Row="33" Content="0 out of 0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
            <Button x:Name="nextPageButton" Content="→" Grid.Column="26" Grid.ColumnSpan="1" Grid.RowSpan="2" Grid.Row="33" Margin="0"/>

        </Grid>
        
        <Image VerticalAlignment="Center" HorizontalAlignment="Center" Source="/Logo.png" Grid.Row="1" Panel.ZIndex="-1"/>
        <!--00176b-->
        <Rectangle Fill="Transparent" Grid.Row="2"/>
    </Grid>
</Page>
