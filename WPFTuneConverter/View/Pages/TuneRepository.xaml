<Page x:Class="WPFTuneConverter.View.Pages.TuneRepository"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPFTuneConverter.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TuneRepository">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ConvertTunePageDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid Background="#00114d">
        <Grid.RowDefinitions>
            <RowDefinition x:Name="TopBar" Height="90"/>
            <RowDefinition x:Name="MainPage"/>
            <RowDefinition x:Name="BottomBar" Height="90"/>
        </Grid.RowDefinitions>

        <Rectangle Fill="Transparent"  Grid.Row="0"/>

        <Label Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Tune Repository TBI" FontSize="90"/>
        <!--00176b-->
        <Rectangle Fill="Transparent" Grid.Row="2"/>
    </Grid>
</Page>
