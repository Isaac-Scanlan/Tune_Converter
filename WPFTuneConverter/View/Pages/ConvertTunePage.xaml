            <RowDefinition x:Name="MainPage"/>
            <RowDefinition x:Name="BottomBar" Height="40"/>
        </Grid.RowDefinitions>
        <!--00176b-->
        <Rectangle Fill="Transparent"  Grid.Row="0"/>

        <Image VerticalAlignment="Center" HorizontalAlignment="Center" Source="/View/Pages/Double Logo.png" Grid.Row="1"/>

