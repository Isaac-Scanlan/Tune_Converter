<UserControl x:Class="WPFTuneConverter.View.CustomControls.StandardPageBackground"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFTuneConverter.View.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="710" d:DesignWidth="1280">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="StandardPageBackgroundDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Background="#577bff">
        <Grid.RowDefinitions>
            <RowDefinition x:Name="TopBar" Height="90"/>
            <RowDefinition x:Name="MainPage"/>
            <RowDefinition x:Name="BottomBar" Height="90"/>
        </Grid.RowDefinitions>

        <Rectangle Fill="#00176b"  Grid.Row="0"/>

        
        <Rectangle Fill="#00176b" Grid.Row="2"/>
    </Grid>
</UserControl>
